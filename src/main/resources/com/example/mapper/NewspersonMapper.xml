<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.NewspersonMapper">

    <select id="getById" resultType="Newsperson">
        select * from t_newsperson where id = #{id}
    </select>
    <select id="login" resultType="Newsperson">
        select * from t_newsperson where name = #{name} and password = #{password}
    </select>
    <select id="getList" resultType="Newsperson">
        select * from t_newsperson
    </select>
    <select id="getByName" resultType="Newsperson">
        select * from t_newsperson where name = #{name}
    </select>

    <insert id="insert">
        insert into t_newsperson
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="name != null">
                name,
            </if>
            <if test="password != null">
                password,
            </if>
            <if test="profile != null">
                profile,
            </if>
            <if test="nickName != null">
                nick_name,
            </if>
            <if test="sign != null">
                sign,
            </if>
            <if test="imageName != null">
                image_name,
            </if>
            <if test="email != null">
                email,
            </if>
            <if test="phone != null">
                phone,
            </if>
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id},
            </if>
            <if test="name != null">
                #{name},
            </if>
            <if test="password != null">
                #{password},
            </if>
            <if test="profile != null">
                #{profile},
            </if>
            <if test="nickName != null">
                #{nick_name},
            </if>
            <if test="sign != null">
                #{sign},
            </if>
            <if test="imageName != null">
                #{image_name},
            </if>
            <if test="email != null">
                #{email},
            </if>
            <if test="phone != null">
                #{phone},
            </if>
        </trim>
    </insert>

    <update id="update" parameterType="Newsperson">
        UPDATE t_newsperson
        <set>
            <if test="nickName!=null and nickName!=''">
                nickName=#{nickName},
            </if>
            <if test="password!=null and password!=''">
                password=#{password},
            </if>
            <if test="sign!=null and sign!=''">
                sign=#{sign},
            </if>
            <if test="imageName!=null and imageName!=''">
                imageName=#{imageName},
            </if>
            <if test="profile!=null and profile!=''">
                profile=#{profile},
            </if>
            <if test="email!=null and email!=''">
                email=#{email},
            </if>
            <if test="phone!=null and phone!=''">
                phone=#{phone},
            </if>
        </set>
        where id=#{id}
    </update>


</mapper>